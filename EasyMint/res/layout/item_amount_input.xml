<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
    <TextView android:layout_width="wrap_content"
		android:id="@+id/currency" android:text=""
		android:layout_height="fill_parent" android:gravity="center_vertical"
		android:textStyle="bold" android:textSize="20sp"/>
    <ToggleButton android:layout_width="wrap_content"
        android:id="@+id/toggle"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/btn_toggle_income_expense_bg"
        android:layout_height="fill_parent" />
    <EditText android:layout_height="fill_parent"
		 android:singleLine="true"
		android:layout_width="wrap_content" android:layout_weight="1"
		android:textSize="20sp" android:gravity="right|center_vertical"
		android:id="@+id/primary" android:numeric="integer" 
		android:background="@android:drawable/editbox_background"
		android:phoneNumber="true" android:maxLength="16"/>
	<TextView android:layout_width="wrap_content" android:text="."
		android:layout_height="fill_parent" android:gravity="bottom"
		 android:textSize="30sp"/>
	<EditText android:layout_height="fill_parent"
		 android:singleLine="true"
		android:layout_width="50dp"
		android:background="@android:drawable/editbox_background"
		android:textSize="20sp" android:gravity="left|center_vertical"
		android:id="@+id/secondary"  android:numeric="integer" 
		android:maxLength="2" android:phoneNumber="true"/>
    <ImageButton
        android:id="@+id/amount_input"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/UpDownButton"/>
    <ImageButton
        android:id="@+id/calculator"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/CalcButton"/>
</LinearLayout>
